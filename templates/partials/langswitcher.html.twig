{% extends 'partials/langswitcher-logic.html.twig' %}

{% block language_block_start %}
<div class="btn-group btn-group-sm" role="group">
{% endblock %}

{% block language_block_end %}
</div>
{% endblock %}

{% block language_item %}
    {% if show_language %}
    <a class="btn btn-outline-secondary" href="{{ lang_url ~ uri.params ~ (uri.query|length > 1 ? '?' ~ uri.query) }}" class="external {{ active_class }}">{% include 'partials/langswitcher-' ~ display_format ~ '.html.twig' %}</a>
    {% endif %}
{% endblock %}
